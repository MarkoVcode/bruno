<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- JavaScript Execution (Electron/V8 requirements) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Network Access (Required for API client functionality) -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- File System Access (Required for saving collections and environments) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Library Validation (Required for native modules like node-machine-id) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
  </dict>
</plist>